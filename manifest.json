{
    "name": "Geoff's Context menu",
    "version": "1",
    "manifest_version": 2,
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_title": "Some tooltip",
      "default_popup": "popup.html"
    },
    "permissions": [
      "contextMenus", "input", "activeTab", "clipboardRead", "clipboardWrite", "tabs"
    ],

    "icons": {
          "16": "icon.png"
    }
}